<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textplayer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player1:0"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textplayer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textplayer1"
            android:text="Player2:0"
            android:textSize="30sp" />

        <Button
            android:layout_below="@+id/textplayer2"
            android:layout_toRightOf="@+id/textplayer1"
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textSize="35sp" />
    </RelativeLayout>

    <TableLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textSize="50dp"
                android:freezesText="true"
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:textSize="50dp"
                android:freezesText="true"
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:textSize="50dp"
                android:freezesText="true"
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textSize="50dp"
                android:freezesText="true"
                android:id="@+id/button20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:textSize="50dp"
                android:freezesText="true"
                android:id="@+id/button21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:textSize="50dp"
                android:freezesText="true"
                android:id="@+id/button22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textSize="50dp"
                android:freezesText="true"
                android:id="@+id/button00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:textSize="50dp"
                android:freezesText="true"
                android:id="@+id/button01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:textSize="50dp"
                android:freezesText="true"
                android:id="@+id/button02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>
    <RatingBar
        android:layout_width="20dp"
        android:layout_height="20dp" />

</LinearLayout>